#include<stdio.h>
#include<stdlib.h>
#include<locale.h>
int main() {
     
	int sayi,faktoriyel=1;
	printf("Faktoriyelini almak istediginiz sayiyi giriniz..\n");
	scanf("%d",&sayi);
	while(sayi>0){
	
	printf("%d ",sayi);
	
    faktoriyel*=sayi;
	sayi--;
	
}


printf("faktoriyeli = %d",faktoriyel);
	return 0; 
}
